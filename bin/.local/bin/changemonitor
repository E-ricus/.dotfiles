#!/bin/bash

INTERNAL="eDP-1-0"
EXTERNAL="DP-0"

if [[ $2 == "hybrid" ]]; then
    INTERNAL="eDP"
    EXTERNAL="DP-1-0"
fi

case $1 in

  internal)
    xrandr --output $INTERNAL --auto --primary --output $EXTERNAL --off 
    ;;

  external)
    xrandr --output $INTERNAL --off --output $EXTERNAL --auto --primary
    ;;

  duplicated)
    xrandr --output $INTERNAL --auto --primary --output $EXTERNAL --auto --same-as $INTERNAL
    ;;

  dual)
    xrandr --output $INTERNAL --auto --primary --output $EXTERNAL --auto --right-of $INTERNAL
    ;;
esac
